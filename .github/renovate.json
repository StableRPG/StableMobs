{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": false,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "automerge": true,
  "automergeType": "pr",
  "requiredStatusChecks": null,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    }
  ],
  "ignoreTests": false
}